<h1>Invoice: <%= @invoice.id %> </h1>

<h2>Invoice information: </h2>

<ul>
  <li>
    <p>Id: <%= @invoice.id %></p>
  </li>
  <li>
    <p>Status: <%= @invoice.status %></p>
  </li>
  <li>
    <p>Created at: <%= @invoice.formatted_date %></p>
  </li>
  <li>
    <p>Customer name: <%=  @invoice.customer.first_name %>  <%=  @invoice.customer.last_name %> </p>
  </li>
</ul>

<h2>Items ordered:</h2>

<%= @invoice.items.each do |item| %>
  <ul>
    <p><%= item.name %><p>
    <li>
      <p><%= @invoice.get_invoice_item(item.id).quantity %></p>
    </li>
    <li>
      <p><%= @invoice.get_invoice_item(item.id).unit_price %></p>
    </li>
    <li>
      <p><%= @invoice.get_invoice_item(item.id).status %></p>
    </li>
  </ul>
<% end %>
