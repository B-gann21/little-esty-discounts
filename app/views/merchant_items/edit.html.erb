<%= form_with url: "/merchants/#{@merchant.id}/items/#{@merchant_item.id}", method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :unit_price %>
  <%= f.text_field :unit_price %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.submit 'Update Item' %>
<% end %>
