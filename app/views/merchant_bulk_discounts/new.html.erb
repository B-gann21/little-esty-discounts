<h1>Create a new bulk discount</h1>

<%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts", local: true do |form| %>
  <%= form.label :quantity_threshold %>
  <%= form.number_field :quantity_threshold %><br>

  <%= form.label :discount_percent %>
  <%= form.number_field :discount_percent %><br>

  <%= form.submit 'Submit' %>
<% end %>
